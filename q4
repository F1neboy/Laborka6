#include <iostream>
#include <conio.h>
#include <string>

using namespace std;

int komu(){
    int a;
    printf("Wprowadź liczbę: \n");
    scanf("%d", &a);
    return a;
}

int f1(int a, int s){
    while(a!=0)
    {
        a=a/2;
        s++;
    }
    return s;
}
int licz(int a){
    if(a%2==0)
        return 0;
    else
        return 1;
}

int main(){
    int a[2], s[2], w=0;
    for(int i=0; i<2; i++){
        a[i]=komu();
        s[i]=f1(a[i], 0);
        if (w<=s[i])
            w=s[i];
    }
    int b1[w], b2[w];
    for (int i=0; i<2; i++){
        for (int j=w-1; j>=0;j--){
                if (i==0){
                    b1[j]=licz(a[i]);
                    a[i]=a[i]/2;
                }
                else{

                    b2[j]=licz(a[i]);
                    a[i]=a[i]/2;
                }
            }
    }
    printf("Liczba 1: ");
    for(int i=0; i<w; i++)
        printf("%d", b1[i]);
    printf("\nLiczba 2: ");
    for(int i=0; i<w; i++)
        printf("%d", b2[i]);
        char c;
    printf("\nWybierz co chcesz zrobić (a- and, o-or, x-xor): ");
    cin>>c;
    if (c=='a'){
        for (int i=0; i<w; i++){
                if (b1[i]==1&&b2[i]==1)
                    printf("1");
                else
                    printf("0");
            }
    }
    else if(c=='o'){
        for (int i=0;i<w; i++){
            if(b1[i]==0&&b2[i]==0)
                printf("0");
            else
                printf("1");
        }
    }
    else if(c=='x'){
        for (int i=0;i<w; i++){
            if((b1[i]==0&&b2[i]==1)||(b1[i]==1&&b2[i]==0))
                printf("1");
            else
                printf("0");
        }
    }
return 0;
}
